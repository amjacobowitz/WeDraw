extends ../layout

block content
    h1.
        User ID #{user._id}
    form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
        p 
            input(type='hidden',value='PUT',name='_method')
        p Name: 
            input(type='text', value='#{user.name}', name='name')
        p Username: 
            input(type='text', value='#{user.username}', name='username')
        p Age: 
            input(type='number', value='#{user.age}', name='age')
        p Are you Married?: 
            input(type='checkbox', name='married', checked=('#{user.married}'==='true' ? "checked" : undefined))
        p 
            button(type='submit').
                Update

